{% extends 'layout.html.twig' %}

{% block content %}

    <div class="nocard">
        <h2 class="card-heading-main">Recent Activity</h2>
    </div>

    {% for post in posts %}
    <article class="card">
        <div class="media">
            <div class="media-object media-object-sm media-object-circle">
                {% if post.author_avatar %}{{ post.author_avatar }}{% else %}<img src="{T_THEME_PATH}/img/no_avatar.gif" alt="no avatar" />{% endif %}
            </div>
            <div class="media-body">
                <h3 class="media-heading media-heading-sm">
                    {{ post.author_full }}
                    {% if post.is_first_post %}
                        created topic
                    {% else %}
                        replied to
                    {% endif %}
                    &ldquo;<a href="{{ post.topic_url }}">{{ post.topic_title }}</a>&rdquo;
                </h3>
                <time class="media-subheading" datetime="{{ post.post_time_iso }}">{{ post.post_time }}</time>
                <div class="media-content">
                    {{ post.post_text }}
                </div>
                <div>
                    <a href="{{ post.post_url }}">Read more</a>
                </div>
            </div>
        </div>
    </article>
    {% endfor %}

{% endblock %}
